<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WebServiceParsing.HeaderControls">
	<ContentView.Content>
        <Grid Grid.Row="10" Grid.Column="1" >

            <Grid.GestureRecognizers>
                <TapGestureRecognizer x:Name="tapGestureConfirm"   />
            </Grid.GestureRecognizers>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Grid.Column="0"  x:Name="btnBackground"                         
                           Aspect="AspectFill" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>




            <Label Grid.Row="0" x:Name="lblConfirm"
                       Grid.Column="0" 
                       AutomationId="lblConfirm" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"                       
                       FontSize="Large" BackgroundColor="#00ffffff" TextColor="White"/>



        </Grid>
    </ContentView.Content>
</ContentView>
